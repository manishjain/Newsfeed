<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= fa_icon "user 2x",  text: @user.name %>
      </h1>
    </section>
    <section class="post_form">
      <%= render 'shared/post_form' %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.posts.any? %>
      <h3>Posts (<%= @user.posts.count %>)</h3>
      <ul class="posts">
        <%= render @posts %>
      </ul>
      <%= will_paginate @posts %>
    <% end %>
  </div>
</div>



